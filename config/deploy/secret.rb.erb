<% redis_host = Capistrano::CLI.ui.ask('REDIS hostname: ') %>
<% redis_port = Capistrano::CLI.ui.ask('REDIS port: ') %>
<% redis_pass = Capistrano::CLI.ui.ask('REDIS password: ') %>
<% ooo_host   = Capistrano::CLI.ui.ask('LibreOffice hostname: ') %>
<% ooo_port   = Capistrano::CLI.ui.ask('LibreOffice port: ') %>
<% storage    = Capistrano::CLI.ui.ask('Storage root: ') %>
# Redis
#
ENV['REDIS_HOST']     = '<%= redis_host %>'
ENV['REDIS_PORT']     = '<%= redis_port %>'
ENV['REDIS_PASSWORD'] = '<%= redis_pass %>'

# Libreoffice
#
ENV['OOO_HOST'] = '<%= ooo_host %>'
ENV['OOO_PORT'] = '<%= ooo_port %>'

# Storage root
#
ENV['HEATHEN_STORAGE_ROOT'] = '<%= storage %>'
